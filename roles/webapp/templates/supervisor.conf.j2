[program:mailytics_webapp_uwsgi]
command={{ project.root }}/virtualenv/bin/uwsgi --ini {{ project.root }}/configs/uwsgi.ini

environment=PYTHONPATH='{{ project.root }}/webapp/mailytics:/data-deploy/mailytics-token-storage/code/',PATH='{{ project.root }}/virtualenv/bin:/usr/local/bin:/usr/local/sbin:/usr/sbin:/bin:/sbin'
directory={{ project.root }}/webapp

user={{ project.user }}
numprocs=1
stdout_logfile={{ project.root }}/logs/uwsgi.log
stderr_logfile={{ project.root }}/logs/uwsgi.log
autostart=true
autorestart=true
